{
  "compilerOptions": {
    "target": "ES5",
    "module": "ESNext",
    "removeComments": true,
    "allowUnreachableCode": false,
    "isolatedModules": true,
    "moduleResolution": "node",
    "lib": ["ESNext", "dom"],
    "outDir": "build",
    "sourceRoot": "./ts/",
    "rootDir": "./ts/",
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": false
  },
  "include": ["ts/*.ts"],
  "exclude": ["node_modules", "build"]
}
